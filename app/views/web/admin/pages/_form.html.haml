= simple_form_for @page, url: { controller: "admin/pages", action: action }, html: { class: 'form-horizontal' } do |f|
  %fieldset
    .field
      = f.input :title, as: :string, label: false, placeholder: t('.title')
    .field
      = f.input :slug, as: :string, label: false
    .field.checkbox
      = f.input :navbar, as: :boolean
    .field_ckeditor
      = f.input :body, label: false, input_html: { cols: 125 }
  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), admin_pages_path, class: 'btn'
