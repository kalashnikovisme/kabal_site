= simple_form_for @number, url: { controller: "admin/numbers", action: action }, html: { class: 'form-horizontal' } do |f|
  %fieldset
    .field
      = f.input :value, as: :string, label: false
    .field
      = f.input :language, as: :select, collection: kabal_support_languages, label: false, selected: 0, label_method: lambda { |language| language[:translation] }, value_method: lambda { |language| language[:name] }
  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), admin_numbers_path, class: 'btn'
