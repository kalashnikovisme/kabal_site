= simple_form_for @number do |f|
  = f.input :value, as: :string, label: false
  = f.input :language, as: :select, collection: kabal_support_languages, input_html: { class: "form-control" }, label: false, selected: 0, label_method: lambda { |language| language[:translation] }, value_method: lambda { |language| language[:name] }
  .form-actions
    = f.button :submit, t('buttons.press_button'), class: "btn btn-primary btn-lg"
