.navbar.navbar-default
  .navbar-header
    %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", type: "button"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{ href: root_path }
      = t('helpers.project_name')
  .navbar-collapse.collapse.navbar-responsive-collapse
    %ul.nav.navbar-nav#navbar
      != links
      %li= link_to 'Kabal on Rubygems', gem_link
    %ul.nav.navbar-nav.navbar-right
      != locales_languages
      - if signed_in?
        %li= link_to t('admin.panel'), admin_path
        %li= link_to t('helpers.sign_out'), session_path, method: :delete
